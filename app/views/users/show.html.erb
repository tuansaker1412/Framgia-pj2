<div class="container">
  <div class="row col s12">
    <div class="card">
      <div class="card-content">
        <div class="row col s4"><%= image_tag @user.avatar, size: Settings.users.avatar_size %></div>
        <h5><i class="material-icons"><%= t ".perm_identity" %></i>
          <%= t ".name" %><%= @user.name %></h5>
        <h5><i class="material-icons"><%= t ".email_icon" %></i>
          <%= t ".email" %><%= @user.email %></h5>
        <p><%= pluralize @user.posts.size, t(".post") %></p>
        <p><%= pluralize @user.comments.size, t(".comment") %></p>
        <% if user_signed_in? %>
          <div class="follow-form">
            <%= render "users/follow_form" %>
          </div>
        <% end %>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
      </div>
      <div class="card-action">
      </div>
    </div>
    <div class="card">
      <%= render "shared/feed", feed_items: @feed_items %>
    </div>
  </div>
</div>
